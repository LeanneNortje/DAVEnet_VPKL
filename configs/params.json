{
    "data_train": "data/flickr_train.json", 
    "data_val": "data/flickr_val.json", 
    "data_test": "data/flickr_test.json", 
    
    "optimizer": "adam",
    "batch_size": 16,    
    "momentum": 0.9,
    "weight_decay": 5e-7,
    "n_epochs": 100,
    "image_model": "Resnet50",
    "pretrained_image_model": true,
    "margin": 1.0,
    "loss": "matchmap",
    "alphas": [1.5, 1.2, 1.5, 1.2, 2.5, 2.5],
    "simtype": "MISA",

    "learning_rate_scheduler": {
        "initial_learning_rate":0.0001,
        "num_epochs": [20, 50, 70, 80],
        "learning_rates": [0.0001, 0.0002, 0.0001, 0.00005],
        "decay_every_n_epochs": 10,
        "decay_factor": 0.95
    },

    "image_config": {
        "crop_size": 224,
        "center_crop": false,
        "RGB_mean": [0.485, 0.456, 0.406],
        "RGB_std": [0.229, 0.224, 0.225]
    },

    "audio_config": {
        "audio_type": "melspectrogram",
        "preemph_coef": 0.97,
        "sample_rate": 16000,
        "window_size": 0.025,
        "window_stride": 0.01,
        "window_type": "hamming",
        "num_mel_bins": 40,
        "target_length": 1024,
        "use_raw_length": false,
        "padval": 0,
        "fmin": 20
    },

    "audio_model": {
        "name": "Transformer",
        "z_dim": 64,
        "c_dim": 512,
        "embedding_dim": 2048 ,
        "num_heads": 8
    },
    "cpc":{
        "warm_start": true,
        "n_sample_frames": 128,
        "n_utterances_per_speaker": 8,
        "hop_length": 160,
        "n_prediction_steps": 6,
        "n_speakers_per_batch": 4,
        "n_negatives": 17,
        "load_pretrained_weights": true,
        "pretrained_weights": "epoch_1500"
    }
}