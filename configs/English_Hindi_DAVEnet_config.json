{
    "data_train": "data/PlacesAudio_400k_distro+PlacesHindi100k+imagesPlaces205_resize_train.json", 
    "data_val": "data/PlacesAudio_400k_distro+PlacesHindi100k+imagesPlaces205_resize_val.json", 
    "data_test": "data/PlacesAudio_400k_distro+PlacesHindi100k+imagesPlaces205_resize_test.json", 
    
    "optimizer": "sgd",
    "batch_size": 64,    
    "momentum": 0.9,
    "weight_decay": 5e-7,
    "n_epochs": 180,
    "image_model": "VGG16",
    "pretrained_image_model": true,
    "margin": 1.0,
    "loss": "pooldot",
    "simtype": "MISA",

    "learning_rate_scheduler": {
        "learning_rate_decay_factor": 0.1,
        "initial_learning_rate": 0.0001,
        "learning_rates": [0.0001, 0.001, 0.0001, 0.00001],
        "pretrain_epochs": 20, 
        "reset_at_epoch": 60
    },

    "image_config": {
        "crop_size": 224,
        "center_crop": false,
        "RGB_mean": [0.485, 0.456, 0.406],
        "RGB_std": [0.229, 0.224, 0.225]
    },

    "audio_config": {
        "audio_type": "melspectrogram",
        "preemph_coef": 0.97,
        "sample_rate": 16000,
        "window_size": 0.025,
        "window_stride": 0.01,
        "window_type": "hamming",
        "num_mel_bins": 40,
        "target_length": 1024,
        "use_raw_length": false,
        "padval": 0,
        "fmin": 20
    },

    "audio_model": {
        "name": "DAVEnet",
        "z_dim": 64,
        "c_dim": 256,
        "embedding_dim": 2048
    },
    "cpc":{
        "n_sample_frames": 128,
        "n_utterances_per_speaker": 8,
        "hop_length": 160,
        "n_prediction_steps": 6,
        "n_speakers_per_batch": 4,
        "n_negatives": 17
    }
}